{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "resolveJsonModule": true,
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "paths": {
            "@/*": ["./src/*"],
            "@prisma-client/*": ["./generated/*"]
        }
    },
    "include": ["./src/**/*.ts"]
}
